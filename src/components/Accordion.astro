---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="group">
  <summary class="cursor-pointer list-none flex items-center justify-between p-4 rounded-lg bg-white/5 border border-white/10 hover:bg-white/10 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500/50">
    <span class="font-medium text-white/90">{title}</span>
    <svg 
      class="w-5 h-5 text-white/60 group-open:rotate-180 transition-transform duration-200" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </summary>
  <div class="mt-4 pl-4 border-l-2 border-white/10">
    <slot />
  </div>
</details>
