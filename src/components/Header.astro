---
import ThemeToggle from './ThemeToggle.astro';
import BurgerMenu from './BurgerMenu.astro';

const currentPath = Astro.url.pathname;
const isHomePage = currentPath === '/';
---

    <header class="bg-gray-50 dark:bg-gray-900 border-b border-gray-200 dark:border-gray-700">
  <nav class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8" aria-label="Top">
    {isHomePage ? (
      <!-- Home page layout: centered navigation -->
      <div class="flex w-full items-center justify-center py-6">
        <div class="flex items-center space-x-2 sm:hidden">
          <ThemeToggle />
          <a 
            href="/about" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            About
          </a>
          <a 
            href="/work" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Work
          </a>
          <a 
            href="/writing" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Writing
          </a>
          <a 
            href="/now" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Now
          </a>
          <a 
            href="/contact" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Contact
          </a>
        </div>
        <!-- Desktop navigation - hidden on mobile -->
        <div class="hidden sm:flex items-center space-x-8">
          <a 
            href="/about" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            About
          </a>
          <a 
            href="/work" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Work
          </a>
          <a 
            href="/writing" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Writing
          </a>
          <a 
            href="/now" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Now
          </a>
          <a 
            href="/contact" 
            class="text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue text-gray-500 dark:text-gray-400"
          >
            Contact
          </a>
          <ThemeToggle />
        </div>
      </div>
    ) : (
      <!-- Other pages layout: left logo, right navigation -->
      <div class="flex w-full items-center justify-between py-6">
        <div class="flex items-center">
          <a href="/" class="text-xl font-bold text-neon-blue dark:text-neon-blue">
            Simon Green
          </a>
        </div>
        <!-- Mobile burger menu -->
        <div class="md:hidden">
          <BurgerMenu>
            <a 
              href="/about" 
              class={`block px-3 py-2 text-base font-medium rounded-md transition-colors ${
                currentPath === '/about' 
                  ? 'text-neon-blue dark:text-neon-blue bg-gray-100 dark:bg-gray-800' 
                  : 'text-gray-700 dark:text-gray-300 hover:text-neon-blue dark:hover:text-neon-blue hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              About
            </a>
            <a 
              href="/work" 
              class={`block px-3 py-2 text-base font-medium rounded-md transition-colors ${
                currentPath.startsWith('/work') 
                  ? 'text-neon-blue dark:text-neon-blue bg-gray-100 dark:bg-gray-800' 
                  : 'text-gray-700 dark:text-gray-300 hover:text-neon-blue dark:hover:text-neon-blue hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              Work
            </a>
            <a 
              href="/writing" 
              class={`block px-3 py-2 text-base font-medium rounded-md transition-colors ${
                currentPath.startsWith('/writing') 
                  ? 'text-neon-blue dark:text-neon-blue bg-gray-100 dark:bg-gray-800' 
                  : 'text-gray-700 dark:text-gray-300 hover:text-neon-blue dark:hover:text-neon-blue hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              Writing
            </a>
            <a 
              href="/now" 
              class={`block px-3 py-2 text-base font-medium rounded-md transition-colors ${
                currentPath === '/now' 
                  ? 'text-neon-blue dark:text-neon-blue bg-gray-100 dark:bg-gray-800' 
                  : 'text-gray-700 dark:text-gray-300 hover:text-neon-blue dark:hover:text-neon-blue hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              Now
            </a>
            <a 
              href="/contact" 
              class={`block px-3 py-2 text-base font-medium rounded-md transition-colors ${
                currentPath === '/contact' 
                  ? 'text-neon-blue dark:text-neon-blue bg-gray-100 dark:bg-gray-800' 
                  : 'text-gray-700 dark:text-gray-300 hover:text-neon-blue dark:hover:text-neon-blue hover:bg-gray-50 dark:hover:bg-gray-800'
              }`}
            >
              Contact
            </a>
            <ThemeToggle slot="theme-toggle" />
          </BurgerMenu>
        </div>
        <!-- Desktop navigation - hidden on mobile -->
        <div class="hidden md:flex items-center space-x-8">
          <a 
            href="/about" 
            class={`text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue ${
              currentPath === '/about' ? 'text-neon-blue dark:text-neon-blue' : 'text-gray-500 dark:text-gray-400'
            }`}
          >
            About
          </a>
          <a 
            href="/work" 
            class={`text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue ${
              currentPath.startsWith('/work') ? 'text-neon-blue dark:text-neon-blue' : 'text-gray-500 dark:text-gray-400'
            }`}
          >
            Work
          </a>
          <a 
            href="/writing" 
            class={`text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue ${
              currentPath.startsWith('/writing') ? 'text-neon-blue dark:text-neon-blue' : 'text-gray-500 dark:text-gray-400'
            }`}
          >
            Writing
          </a>
          <a 
            href="/now" 
            class={`text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue ${
              currentPath === '/now' ? 'text-neon-blue dark:text-neon-blue' : 'text-gray-500 dark:text-gray-400'
            }`}
          >
            Now
          </a>
          <a 
            href="/contact" 
            class={`text-sm font-medium transition-colors hover:text-neon-blue dark:hover:text-neon-blue ${
              currentPath === '/contact' ? 'text-neon-blue dark:text-neon-blue' : 'text-gray-500 dark:text-gray-400'
            }`}
          >
            Contact
          </a>
          <ThemeToggle />
        </div>
      </div>
    )}
  </nav>
</header>