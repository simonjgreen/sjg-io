---
export interface Props {
  label: string;
  href?: string;
  icon?: string;
}

const { label, href, icon } = Astro.props;
---

{href ? (
  <a 
    href={href}
    class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium bg-white/5 border border-white/10 hover:bg-white/10 hover:scale-[1.01] transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500/50"
    target="_blank"
    rel="noopener noreferrer"
  >
    {icon && (
      <span class="w-4 h-4 flex-shrink-0" set:html={icon} />
    )}
    <span>{label}</span>
  </a>
) : (
  <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-sm font-medium bg-white/5 border border-white/10">
    {icon && (
      <span class="w-4 h-4 flex-shrink-0" set:html={icon} />
    )}
    <span>{label}</span>
  </span>
)}
