---
export interface Props {
  href?: string;
  class?: string;
}

const { href, class: className } = Astro.props;
const Component = href ? 'a' : 'div';
const baseClasses = 'block p-6 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-lg transition-all duration-300 hover:scale-105 hover:border-neon-blue/50 dark:hover:border-neon-blue/50';
const linkClasses = href ? 'hover:glow-accent' : '';
---

<Component href={href} class={`${baseClasses} ${linkClasses} ${className || ''}`}>
  <slot />
</Component>
