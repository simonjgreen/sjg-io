---
import Page from '../layouts/Page.astro';
import { getCollection } from 'astro:content';

const mediaPage = await getCollection('pages', ({ slug }) => slug === 'media');
const mediaContent = mediaPage[0];

if (!mediaContent) {
  throw new Error('Media page content not found');
}

const { Content } = await mediaContent.render();
---

<Page 
  title={mediaContent.data.title} 
  description={mediaContent.data.description}
>
  <Content />
</Page>
