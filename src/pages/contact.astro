---
import Page from '../layouts/Page.astro';
import { getCollection } from 'astro:content';

const contactPage = await getCollection('pages', ({ slug }) => slug === 'contact');
const contactContent = contactPage[0];

if (!contactContent) {
  throw new Error('Contact page content not found');
}

const { Content } = await contactContent.render();
---

<Page 
  title={contactContent.data.title} 
  description={contactContent.data.description}
>
  <Content />
</Page>
