---
import Page from '../layouts/Page.astro';
import { getCollection } from 'astro:content';

const nowPage = await getCollection('pages', ({ slug }) => slug === 'now');
const nowContent = nowPage[0];

if (!nowContent) {
  throw new Error('Now page content not found');
}

const { Content } = await nowContent.render();
---

<Page 
  title={nowContent.data.title} 
  description={nowContent.data.description}
>
  <Content />
</Page>
