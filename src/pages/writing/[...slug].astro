---
import Post from '../../layouts/Post.astro';
import { getCollection } from 'astro:content';
import readingTime from 'reading-time';
import ArticleLink from '../../components/ArticleLink.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

// Render content
const { Content } = await post.render();

// Calculate reading time from the post body
const readingStats = readingTime(post.body);
const readingTimeMinutes = Math.ceil(readingStats.minutes);
---

<Post
  title={post.data.title}
  description={post.data.description}
  date={post.data.date}
  updated={post.data.updated}
  tags={post.data.tags}
  ogTitle={post.data.ogTitle}
  ogDescription={post.data.ogDescription}
  canonical={post.data.canonical}
  readingTime={readingTimeMinutes}
  image={post.data.image}
>
  <Content components={{ ArticleLink }} />
</Post>
