---
import Base from '../../layouts/Base.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allWorkPages = await getCollection('pages', ({ slug }) => {
  return slug.startsWith('work/');
});

const workPages = allWorkPages.sort((a, b) => {
  const order = ['work/wirehive', 'work/1310', 'work/pax8', 'work/bluhalo', 'work/forest-school', 'work/school-governor'];
  return order.indexOf(a.slug) - order.indexOf(b.slug);
});
---

<Base title="Work" description="My professional experience and projects.">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Work
      </h1>
      <p class="mt-6 text-xl leading-8 text-gray-600 dark:text-gray-300">
        My professional experience and projects. I've built and led technology teams 
        across different industries, from early-stage startups to global enterprises.
      </p>
    </div>

    <div class="mt-12 space-y-8">
      {workPages.map((workPage) => (
        <Card href={`/work/${workPage.slug.replace('work/', '')}`}>
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
                {workPage.data.title}
              </h2>
              <p class="mt-2 text-gray-600 dark:text-gray-300">
                {workPage.data.description}
              </p>
            </div>
          </div>
        </Card>
      ))}
    </div>

    {workPages.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">
          No work experience listed yet. Check back soon!
        </p>
      </div>
    )}
  </div>
</Base>
