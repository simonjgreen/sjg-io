---
import Page from '../../layouts/Page.astro';
import { getCollection } from 'astro:content';

const pageForestSchool = await getCollection('pages', ({ slug }) => slug === 'work/forest-school');
const pageContent = pageForestSchool[0];

if (!pageContent) {
  throw new Error('Forest School page content not found');
}

const { Content } = await pageContent.render();
---

<Page 
  title={pageContent.data.title} 
  description={pageContent.data.description}
>
  <Content />
</Page>
