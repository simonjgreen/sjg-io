---
import Page from '../../layouts/Page.astro';
import { getCollection } from 'astro:content';

const page1310 = await getCollection('pages', ({ slug }) => slug === 'work/1310');
const pageContent = page1310[0];

if (!pageContent) {
  throw new Error('1310 page content not found');
}

const { Content } = await pageContent.render();
---

<Page 
  title={pageContent.data.title} 
  description={pageContent.data.description}
>
  <Content />
</Page>
