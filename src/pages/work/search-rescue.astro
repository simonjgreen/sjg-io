---
import Page from '../../layouts/Page.astro';
import { getCollection } from 'astro:content';

const pageSearchRescue = await getCollection('pages', ({ slug }) => slug === 'work/search-rescue');
const pageContent = pageSearchRescue[0];

if (!pageContent) {
  throw new Error('Search & Rescue page content not found');
}

const { Content } = await pageContent.render();
---

<Page 
  title={pageContent.data.title} 
  description={pageContent.data.description}
>
  <Content />
</Page>
